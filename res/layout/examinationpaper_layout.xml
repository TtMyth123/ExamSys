    android:layout_height="match_parent"
    android:orientation="vertical" >

     <ListView 
         android:layout_weight="10"
         android:id="@+id/listViewExamination"
         android:layout_width="match_parent"
         android:layout_height="match_parent" >

    </ListView>

     <Button
         android:id="@+id/buttonOpenExaminationIntro"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/buttonOpenExaminationIntro" />

    <Gallery
    
        android:id="@+id/galleryExaminationType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
